name: MacOs CI

on: [ pull_request ]

jobs:
  build:
    {% raw -%}
    name: "Python ${{ matrix.python-version }} on ${{ matrix.os }}"
    runs-on: "${{ matrix.os }}"
    {%- endraw %}
    strategy:
      matrix:
        os:
          - macos-latest
        python-version:
        {%- for version in ["3.7", "3.8", "3.9", "3.10"] -%}
        {%- if version >= cookiecutter.python_base_version %}
        - {{ version }}
        {%- endif %}
        {%- endfor %}

    steps:
      - name: Checkout
        uses: actions/checkout@v2.4.0

      - name: Install Poetry
        uses: snok/install-poetry@v1

      {% raw %}
      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v3
        with:
          python-version: ${{ matrix.python-version }}
      - name: Install Dependencies
        run: poetry install

      - name: Run Tests
        run: poetry run python -m nox -s test

      - name: Run linters
        run: poetry run python -m nox -s check
      {% endraw %}
